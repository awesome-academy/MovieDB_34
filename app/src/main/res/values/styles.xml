<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FAE300</item>
    </style>

    <style name="ViewMore" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_section</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">@dimen/dp_2</item>
    </style>

</resources>
